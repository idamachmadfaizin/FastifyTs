{
  "name": "fastify-ts",
  "version": "1.0.0",
  "description": "The Fastify TypeScript Starter",
  "main": "index.js",
  "scripts": {
    "start": "nodemon",
    "build": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Idamachmadfaizin",
  "license": "MIT",
  "packageManager": "pnpm@10.10.0",
  "dependencies": {
    "@fastify/accepts": "^5.0.2",
    "@fastify/autoload": "^6.3.0",
    "@fastify/compress": "^8.0.1",
    "@fastify/cors": "^11.0.1",
    "@fastify/env": "^5.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/multipart": "^9.0.3",
    "@fastify/sensible": "^6.0.3",
    "@fastify/static": "^8.1.1",
    "@fastify/view": "^11.0.0",
    "fastify": "^5.3.0",
    "fastify-plugin": "^5.0.1",
    "fastify-zod-openapi": "^4.1.1",
    "pug": "^3.0.3",
    "ulid": "^3.0.0",
    "zod": "^3.24.3",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@fastify/swagger": "^9.5.0",
    "@fastify/swagger-ui": "^5.2.2",
    "@types/node": "^22.14.1",
    "@types/pug": "^2.0.10",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "json-schema-to-ts": "^3.1.1",
    "lint-staged": "^15.5.1",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      ".env"
    ],
    "exec": "ts-node --transpileOnly src/index.ts --trace-sync-io",
    "ext": "js,ts,json,yaml",
    "ignore": [
      "test",
      "src/**/*.spec.ts",
      "src/**/*.test.ts"
    ],
    "env": {
      "APP_NAME": "fastifyTs",
      "NODE_ENV": "development"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
