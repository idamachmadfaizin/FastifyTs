{
  "name": "fastify-ts",
  "version": "1.0.0",
  "description": "The Fastify TypeScript Starter",
  "main": "index.js",
  "scripts": {
    "start": "nodemon",
    "build": "tsc --project tsconfig.json --outDir dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Idamachmadfaizin",
  "license": "MIT",
  "packageManager": "pnpm@10.8.1",
  "dependencies": {
    "fastify": "^5.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/node": "^22.14.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      ".env"
    ],
    "exec": "ts-node --transpileOnly src/index.ts --trace-sync-io",
    "ext": "js,ts,json,yaml",
    "ignore": [
      "test",
      "src/**/*.spec.ts",
      "src/**/*.test.ts"
    ],
    "env": {
      "DEBUG": "http"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
